@model List<ZealTravel.Backoffice.Web.Models.Credentials.SupplierProductDetailsViewModel>

@{
    Layout = "~/Views/Master.cshtml";
    ViewData["Title"] = "Supplier";
    var i = 0;
}
<div class="wrapper">

    <div class="content-wrapper">
        @await Html.PartialAsync("~/Views/Partials/Admin/Credentials/_credentailTabLinks.cshtml")

        <div class="col-md-12 col-xs-12" style="background: rgba(0, 0, 0, 0.05); border: 1px solid #ccc; border-top: 0px solid;">
            <div id="Supplier_Detail_Galileo_Airline_Div" style="display: block; margin-top: 20px;">
                <div class="row-fluid col-md-12 col-xs-12 table-responsive">
                    <div>
                        <div class="mydatagrid defaultText table table-striped table-bordered table-hover flex-table" cellspacing="0" id="ContentPlaceHolder1_GridView2" style="font-family:Arial;font-size:9pt;border-collapse:collapse;">

                            <div class="flex-row header">
                                <div class="cell" style="width:3%;">#</div>
                                <div class="cell" style="width:10%;">SupplierID	</div>
                                <div class="cell" style="width:10%;">SupplierType</div>
                                <div class="cell" style="width:5%;">SupplierCode</div>
                                <div class="cell" style="width:10%;">Flight</div>
                                <div class="cell" style="width:10%;">Hotel</div>
                                <div class="cell" style="width:10%;">SupplierName</div>
                                <div class="cell" style="width:10%;">Status</div>
                                <div class="cell" style="width:20%;"><i class="fa fa-wrench"></i>Action</div>
                            </div>


                            @foreach (var supplier in Model)
                            {
                                <div class="flex-row table-row view-row @Html.Raw(i%2 == 0 ? "even" : "odd")" id="view-row-@supplier.Id">
                                    <div style="width:3%;" class="cell">@(i + 1)</div>
                                    <div style="width:10%;" class="cell">@supplier.SupplierId</div>
                                    <div style="width:10%;" class="cell">@supplier.SupplierType</div>
                                    <div style="width:5%;" class="cell">@supplier.SupplierCode</div>
                                    <div style="width:10%;" class="cell">@supplier.Flight</div>
                                    <div style="width:10%;" class="cell">@supplier.Hotel</div>
                                    <div style="width:10%;" class="cell">@supplier.SupplierName</div>
                                    <div style="width:10%;" class="cell">@supplier.Status</div>
                                    <div style="width:20%;" class="cell">
                                        <a id=@supplier.Id title="Edit" data-id="@supplier.Id" class="edit-btn"><i class="fa fa-edit updico"></i></a>
                                    </div>
                                </div>

                                <div class="edit-row  @Html.Raw(i%2 == 0 ? "even" : "odd")" id="edit-row-@supplier.Id" style="display:none">
                                    @using (Html.BeginForm("UpdateProductDetail", "AdminCredentionalManagement", FormMethod.Post, new { id = "ProductDetail.cshtml", enctype = "multipart/form-data", @class = "flex-row" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("Id", supplier.Id)
                                        @Html.Hidden("SupplierId", supplier.SupplierId)
                                        <div class="cell" style="width:3%;">@(i + 1)</div>
                                        <div class="cell" style="width:10%">@supplier.SupplierId</div>
                                        <div class="cell" style="width:10%">@supplier.SupplierType</div>
                                        <div class="cell" style="width:5%">@supplier.SupplierCode</div>
                                        <div class="cell" style="width:10%">@supplier.Flight</div>
                                        <div class="cell" style="width:10%">@supplier.Hotel</div>
                                      
                                        <div class="cell" style="width:10%;">
                                            @Html.TextBoxFor(m => m.ElementAt(i).SupplierName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ElementAt(i).SupplierName, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="cell" style="width:10%;">
                                            @Html.DropDownListFor(m => m.ElementAt(i).Status, new SelectList(new[] { supplier.Status, supplier.Status == true ? false : true }), new { @class = "form-control required", @required = "required" })
                                            @Html.ValidationMessageFor(m => m.ElementAt(i).Status, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mt-2 cell" style="width:20%;border-right:none;">
                                            <button type="submit" data-id="@supplier.Id" class="credential-btn"><i class="fa fa-save savek" title="" aria-describedby="ui-id-2"></i></button>
                                            <a class="cancel-btn" data-id="@supplier.Id"><i class="fa fa-times crosssr" title="Cancel"></i></a>
                                        </div>
                                    }
                                </div>
                                i++;
                            }

                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>